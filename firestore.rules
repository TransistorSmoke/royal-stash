rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /recyclables/{document=**} {
      // Allow creation of new items only for authenticated users
      allow create: if request.auth != null;

      // Allow only logged-in users to delete items that they created
      allow read, delete: if request.auth.uid == resource.data.uid;
    }
    match /stash/{document=**} {
      // Allow only creator to create or read their stash
      allow create, read: if request.auth != null && request.auth.uid == resource.data.uid;
    }
  }
}